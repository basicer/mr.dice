<?xml version='1.0' encoding='utf-8'?>
<widget id="com.basicer.mrdice" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mr.Dice</name>
    <description>
        A dice rolling app for IOS and Android based on dDiceCalc Also runs right in your browser thanks to PhoneGap.
    </description>
    <author email="mrdice@basicer.com" href="http://basicer.com">
        Rob Blanckaert
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="osx">
        <preference name="WindowSize" value="300x450"/>
    </platform>
</widget>
